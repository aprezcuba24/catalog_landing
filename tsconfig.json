{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@content/*": ["src/content/*"],
      "@data/*": ["src/data_files/*"],
      "@images/*": ["src/images/*"],
      "@scripts/*": ["src/assets/scripts/*"],
      "@styles/*": ["src/assets/styles/*"],
      "@utils/*": ["src/utils/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["swiper"],
    "moduleResolution": "Node",
    "module": "ESNext", 
    "target": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "react",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*", "glide.d.ts", "globals.d.ts"],
  "exclude": ["node_modules", "dist"]
}